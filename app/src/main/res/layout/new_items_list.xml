<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:orientation="horizontal"
    android:padding="@dimen/list_item_padding">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_weight="2">

        <ImageView
            android:id="@+id/news_img"
            android:layout_width="@dimen/image_small_size"
            android:layout_height="@dimen/image_small_size"
            android:layout_marginEnd="@dimen/margin_small_elements"
            android:scaleType="centerCrop"/>
    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1">

        <TextView
            android:id="@+id/news_author_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/news_header_txt"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/news_preview_txt"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/news_descriptions_txt"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:textSize="14sp"
            android:maxLines="5"/>

        <TextView
            android:id="@+id/news_data_txt"
            android:layout_width="wrap_content"
            android:layout_height="12dp"
            android:textSize="12sp"/>

    </LinearLayout>


</LinearLayout>
