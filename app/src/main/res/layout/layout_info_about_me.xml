<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_weight="1">


    <ImageView
        android:id="@+id/img_skill1"
        android:layout_width="@dimen/img_info_label"
        android:layout_height="@dimen/img_info_label"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="8dp"
        android:background="@drawable/jigsaw"/>

    <TextView
        android:id="@+id/text_skill1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/img_skill1"
        android:text="@string/company_info"
        android:layout_marginBottom="8dp"
        android:textSize="@dimen/text_small_size_ad_info"/>

    <ImageView
        android:id="@+id/img_skill2"
        android:layout_width="@dimen/img_info_label"
        android:layout_height="@dimen/img_info_label"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/text_skill1"
        android:background="@drawable/android"/>

    <TextView
        android:id="@+id/text_skill2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_skill1"
        android:layout_toEndOf="@+id/img_skill1"
        android:text="@string/my_goal_text"
        android:textSize="@dimen/text_small_size_ad_info"/>

    <ImageView
        android:id="@+id/img_skill3"
        android:layout_width="@dimen/img_info_label"
        android:layout_height="@dimen/img_info_label"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/img_skill2"
        android:background="@drawable/dumbbell"/>

    <TextView
        android:id="@+id/text_skill3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_skill2"
        android:layout_toRightOf="@+id/img_skill3"
        android:text="@string/love_sport_text"
        android:textSize="@dimen/text_small_size_ad_info"/>


</RelativeLayout>
